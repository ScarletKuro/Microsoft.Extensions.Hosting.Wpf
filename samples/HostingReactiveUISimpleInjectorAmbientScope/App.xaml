<Application x:Class="HostingReactiveUISimpleInjectorAmbientScope.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:locator="clr-namespace:HostingReactiveUISimpleInjectorAmbientScope.Locator"
             ShutdownMode="OnExplicitShutdown">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!--Resources that you need, for example MahApps-->
            </ResourceDictionary.MergedDictionaries>
            <locator:ViewModelLocatorHost x:Key="Locator"/>
        </ResourceDictionary>
    </Application.Resources>
</Application>
