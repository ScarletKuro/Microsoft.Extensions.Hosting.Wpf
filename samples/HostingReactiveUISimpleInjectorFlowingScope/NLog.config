<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://www.nlog-project.org/schemas/NLog.xsd NLog.xsd"
      autoReload="true"
      throwExceptions="false"
      internalLogLevel="Off" internalLogFile="c:\temp\nlog-internal.log">

	<!-- optional, add some variables
  https://github.com/nlog/NLog/wiki/Configuration-file#variables
  -->
	<!--
  See https://github.com/nlog/nlog/wiki/Configuration-file
  for information on customizing logging rules and outputs.
   -->
	<targets async="true">

		<!--
    add your targets here
    See https://github.com/nlog/NLog/wiki/Targets for possible targets.
    See https://github.com/nlog/NLog/wiki/Layout-Renderers for the possible layout renderers.
    -->
		<target name="allfile" xsi:type="File" fileName="${basedir:fixtempdir=true}/logs/log.txt"
		        keepFileOpen="true"
		        concurrentWrites="false"
		        lineEnding="CRLF"
		        archiveEvery="Day"
		        archiveFileName = "${basedir:fixtempdir=true}/logs/archive/{#}.zip"
		        archiveNumbering = "Date"
		        encoding="UTF-8"
		        archiveDateFormat = "yyyy-MM-dd"
		        enableArchiveFileCompression="true"
		        header="
Logging start    = ${longdate}${newline}
Base dirctory    = ${basedir}${newline}
Process dirctory = ${basedir:fixtempdir=true}${newline}
Machine name     = ${machinename}${newline}
Process name     = ${processname}${newline}
---------------------------------------------------------------------------------------------------------------------------------------------------------------${newline}
Date and Time            | Level | Version | Thread Id | Module                                                      | Message${newline}
---------------------------------------------------------------------------------------------------------------------------------------------------------------"
		        layout=" ${longdate} | ${level:uppercase=true:padding=-5} | ${assembly-version:padding=-5} | ${threadid:padding=-9} | ${Logger:shortName=true:padding=28} -> ${callsite:includeSourcePath=false:className=false:padding=27:fixedLength=true} | ${message} ${exception:format=tostring,data:maxInnerExceptionLevel=20:separator=\r\n}"/>
			<!--
      Write events to a file with the date in the filename.
      <target xsi:type="File" name="f" fileName="${basedir}/logs/${shortdate}.log"
              layout="${longdate} ${uppercase:${level}} ${message}" />
      -->
	</targets>

	<rules>
		<!-- add your logging rules here -->
		<logger name="*" minlevel="Trace" writeTo="allfile" />
		<!--
    Write all events with minimal level of Debug (So Debug, Info, Warn, Error and Fatal, but not Trace)  to "f"
    <logger name="*" minlevel="Debug" writeTo="f" />
    -->
	</rules>
</nlog>
