<Window x:Class="HostingReactiveUISimpleInjectorFlowingScope.View.ChildWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewModel="clr-namespace:HostingReactiveUISimpleInjectorFlowingScope.ViewModel"
        d:DataContext="{d:DesignInstance Type=viewModel:ChildViewModel}"
        mc:Ignorable="d"
        Title="ChildWindow" Height="450" Width="800">
    <Grid>
        <TextBlock Grid.Row="0" Text="{Binding Context.Id, Mode=OneTime}"></TextBlock>
    </Grid>
</Window>
